{
    "compilerOptions": {
        /* Compilación básica */
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        /* Decoradores y TypeORM */
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        /* Node.js */
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        /* Opcional (si quieres usar imports absolutos tipo "@/application") */
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}